<div class="col-md-12">
  <h2 class="text-center">我加入的评论版 </h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Movie</th>
        <th>Synopsis</th>
        <th>Criticism Count</th>
        <th>Last Update</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
