<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <lable class="lable lable-info"> 群组成员 </lable>
         <%= link_to("Quit Group", quit_group_path(@group), method: :post, class: "btn btn-default") %>
      <% else %>
        <label class="lable lable-warning">不是群组成员</lable>
          <%= link_to("Join Group", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>
    <%= link_to("Write a Criticism", new_group_post_path(@group), class: "btn btn-default pull-left") %>
     <% if current_user && current_user == @group.user %>
        <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-left") %>
     <% end %>
  </div>
  <h2 class="text-center"><%= @group.title %></h2>
  <p ><%= @group.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Criticism</th>
        <th>Owner</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
       <tr>
         <td><%= simple_format(post.content) %></td>
         <td><%= post.user.email %></td>
         <td><%= post.created_at %></td>

         </td>
       </tr>
      <% end %>
    </tbody>
  </table>

   <div class="text-center">
     <%= will_paginate @posts %>
   </div>

</div>
